@page
@using TrainSchedule.Services
@inject CommonLocalizationService localizer
@model TrainSchedule.Pages.Connections.DeleteModel

@{
    Layout = "/Pages/Admin/_Layout.cshtml";
    ViewData["Title"] = "Delete";
}

<h1>@localizer.Get("Delete")</h1>

<h3>@localizer.Get("Are you sure you want to delete this?")</h3>
<div>
    <h4>@localizer.Get("Connection")</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Connection.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Connection.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Connection.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Connection.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Connection.IsWiFi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Connection.IsWiFi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Connection.IsBicycleCarriage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Connection.IsBicycleCarriage)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Connection.ConnectionID" />
        <input type="submit" value="@localizer.Get("Delete")" class="btn btn-danger" /> |
        <a asp-page="./Index">@localizer.Get("Back to list")</a>
    </form>
</div>
