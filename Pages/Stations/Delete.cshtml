@page
@using TrainSchedule.Services
@inject CommonLocalizationService localizer
@model TrainSchedule.Pages.Stations.DeleteModel

@{
    Layout = "/Pages/Admin/_Layout.cshtml";
    ViewData["Title"] = "Delete";
}

<h1>@localizer.Get("Delete")</h1>

<h3>@localizer.Get("Are you sure you want to delete this ?")</h3>
<div>
    <h4>Station</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Station.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Station.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Station.StationID" />
        <input type="submit" value="@localizer.Get("Delete")" class="btn btn-danger" /> |
        <a asp-page="./Index">@localizer.Get("Back to list")</a>
    </form>
</div>
