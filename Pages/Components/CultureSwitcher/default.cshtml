@model CultureSwitcherModel
<div>
    <div class="list-group list-group-horizontal list-group-item-primary bg-primary" style="width: 150px">
        @foreach (var culture in Model.SupportedCultures)
        {
            <button value="@culture.Name" name="culture" id="culture-options" class="btn bg-primary btn-primary" style="padding: 0px; margin-right: 10px">
                @if (@culture.Name == "en-GB")
                {<img class="border border-white rounded" onclick="cookieEN()" src="/gb.svg" style="width: 60px" />}
                else
                { <img class="border border-white rounded" onclick="cookiePL()" src="/pl.svg" style="width: 60px" />}
            </button>
        }
    </div>
</div>

<script type="text/javascript">
    function cookiePL() {
        document.cookie = ".AspNetCore.Culture=c=pl-PL|uic=pl-PL";
        location.reload();
    };
    function cookieEN() {
        document.cookie = ".AspNetCore.Culture=c=en-GB|uic=en-GB";
        location.reload();
    };
</script>