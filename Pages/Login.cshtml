@page
@using TrainSchedule.Services
@inject CommonLocalizationService localizer
@model TrainSchedule.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<div>
    @Model.Message
</div>
<form method="post">
    <div class="form-group">
        <label asp-for="Password" class="col-form-label col-md-2">@localizer.Get("Password")</label>
        <div class="col-md-10">
            <input asp-for="Password" />
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-primary">@localizer.Get("Log in")</button>
    </div>
</form>