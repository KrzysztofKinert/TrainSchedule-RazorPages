@page
@using TrainSchedule.Services
@inject CommonLocalizationService localizer
@model TrainSchedule.Pages.Stages.EditModel
@{
    Layout = "/Pages/Admin/_Layout.cshtml";
    ViewData["Title"] = "Edit";
}

<h1>@localizer.Get("Edit")</h1>

<h4>@localizer.Get("Stage")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Stage.StageID" />
            <div class="form-group">
                <label asp-for="Stage.ConnectionID" class="control-label"></label>
                <select asp-for="Stage.ConnectionID" class="form-control" asp-items="ViewBag.ConnectionID"></select>
                <span asp-validation-for="Stage.ConnectionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stage.Sequence" class="control-label"></label>
                <input asp-for="Stage.Sequence" class="form-control" />
                <span asp-validation-for="Stage.Sequence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stage.DepartureStation" class="control-label"></label>
                <input asp-for="Stage.DepartureStation" class="form-control" />
                <span asp-validation-for="Stage.DepartureStation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stage.ArrivalStation" class="control-label"></label>
                <input asp-for="Stage.ArrivalStation" class="form-control" />
                <span asp-validation-for="Stage.ArrivalStation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stage.DepartureDate" class="control-label"></label>
                <input asp-for="Stage.DepartureDate" class="form-control" />
                <span asp-validation-for="Stage.DepartureDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stage.ArrivalDate" class="control-label"></label>
                <input asp-for="Stage.ArrivalDate" class="form-control" />
                <span asp-validation-for="Stage.ArrivalDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stage.Distance" class="control-label"></label>
                <input asp-for="Stage.Distance" class="form-control" />
                <span asp-validation-for="Stage.Distance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@localizer.Get("Save")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">@localizer.Get("Back to list")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
